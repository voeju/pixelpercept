<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="150.0" maxWidth="350.0" minHeight="150.0" minWidth="350.0" prefHeight="150.0" prefWidth="350.0" style="-fx-background-color: #e9c46a;" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.uni_hannover.pixelpercept.controller.ConfirmExit">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="150.0" maxWidth="350.0" minHeight="150.0" minWidth="350.0" prefHeight="150.0" prefWidth="350.0" style="-fx-background-color: #e9c46a;">
            <children>
                <Label text="Are you sure you want to leave?">
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin></Label>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="100.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onYesButtonClicked" style="-fx-background-color: #e76f51;" text="Yes and close">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding></Button>
                        <Button mnemonicParsing="false" onAction="#onNoButtonClicked" style="-fx-background-color: #e76f51;" text="No and stay">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding></Button>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding></VBox>
    </children>
</AnchorPane>
